---
import Layout from '../../layouts/Layout.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';
import Features from './Features.astro';
import ConverterApp from '../ConverterApp';
import { useTranslations } from '../../i18n/utils';
import { LanguageCode } from '../../i18n/constants';

export interface Props {
  lang: LanguageCode;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const title: string = `Easy to GIF - ${t('app.description')}`;
const description: string = t('app.description');
---

<Layout title={title} description={description} lang={lang}>
  <div class="min-h-screen bg-background">
    <Header lang={lang} />

    <main class="container py-8 sm:px-8 px-4">
      <div class="max-w-4xl space-y-8 flex flex-col gap-8">
        <!-- Hero Section - Desktop Only -->
        <div class="hidden md:block text-center space-y-6">
          <div class="space-y-4">
            <h1 class="text-4xl font-bold tracking-tight text-foreground">
              {t('hero.title')}
            </h1>
            <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
              {t('hero.subtitle')}
            </p>
          </div>

          <Features lang={lang} />
        </div>

        <!-- Converter App -->
        <ConverterApp client:only="react" lang={lang} />
      </div>
    </main>

    <Footer lang={lang} />
  </div>
</Layout>
